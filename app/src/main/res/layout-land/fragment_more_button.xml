            <LinearLayout
                style="@style/rowButtonLayout" >

                <Button
                    android:id="@+id/bsin"
                    style="@style/moreOperatorButton"
                    android:onClick="buttonClicked"
                    android:textSize="16sp"
                    android:text="sin" />

                <Button
                    android:id="@+id/bcos"
                    style="@style/moreOperatorButton"
                    android:textSize="16sp"
                    android:onClick="buttonClicked"
                    android:text="cos" />

                <Button
                    android:id="@+id/btan"
                    style="@style/moreOperatorButton"
                    android:textSize="16sp"
                    android:onClick="buttonClicked"
                    android:text="tan" />



            </LinearLayout>

            <LinearLayout
                style="@style/rowButtonLayout" >

                <Button
                    android:id="@+id/bln"
                    style="@style/moreOperatorButton"
                    android:textSize="16sp"
                    android:onClick="buttonClicked"
                    android:text="ln" />

                <Button
                    android:id="@+id/blog"
                    style="@style/moreOperatorButton"
                    android:textSize="16sp"
                    android:onClick="buttonClicked"
                    android:text="log" />

                <Button
                    android:id="@+id/bper"
                    style="@style/moreOperatorButton"
                    android:textSize="16sp"
                    android:onClick="buttonClicked"
                    android:text="%" />


            </LinearLayout>

            <LinearLayout
                style="@style/rowButtonLayout" >

                <ImageButton
                    android:id="@+id/bpi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:onClick="buttonClicked"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_pi_new"
                    android:background="@color/blue"
                     />

                <Button
                    android:id="@+id/bexp"
                    style="@style/moreOperatorButton"
                    android:textSize="16sp"
                    android:onClick="buttonClicked"
                    android:text="e" />

                <Button
                    android:id="@+id/bpow"
                    style="@style/moreOperatorButton"
                    android:textSize="16sp"
                    android:onClick="buttonClicked"
                    android:text="^" />


            </LinearLayout>

            <LinearLayout
                style="@style/rowButtonLayout" >

                <Button
                    android:id="@+id/bopen"
                    style="@style/moreOperatorButton"
                    android:textSize="16sp"
                    android:onClick="buttonClicked"
                    android:text="(" />

                <Button
                    android:id="@+id/bclose"
                    style="@style/moreOperatorButton"
                    android:textSize="16sp"
                    android:onClick="buttonClicked"
                    android:text=")" />

                <ImageButton
                    android:id="@+id/broot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:onClick="buttonClicked"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_root_new"
                    android:background="@color/blue"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


